{
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "pwsh.exe",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-Command"
        ]
      }
    }
  },
  "linux": {
    "options": {
      "shell": {
        "executable": "/usr/bin/pwsh",
        "args": [
          "-NoProfile",
          "-Command"
        ]
      }
    }
  },
  "osx": {
    "options": {
      "shell": {
        "executable": "/usr/local/bin/pwsh",
        "args": [
          "-NoProfile",
          "-Command"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "${cwd}/build.ps1 -Task Build -Verbose",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "${cwd}/build.ps1 -Task Test -Verbose",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Bootstrap",
      "type": "shell",
      "command": "${cwd}/build.ps1 -Task Init -Bootstrap -Verbose"
    },
  ]
}
